<div class="{{ parentDivClasses }}">
    {% for content in contentArray %}
        {% if content is defined %}
        <span class="{{ content[0] }}">
            {{ content[1] }}
            {% if content['extraSpan'] is defined %}
                : <span>{{ content['extraSpan'] }}</span>
            {% endif %}
        </span>
        {% endif %}
    {% endfor %}
</div>
